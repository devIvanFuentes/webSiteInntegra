@import 'styl/variables'
nav
	position fixed
	background azulClaro
	height 80px
	box-shadow none
	top 0
	z-index 1000
	.brand-logo
		img
			width 100px
			padding 5px
	ul.right
			li, a
				height 80px
	li
		a
			color black
			height 80px
		a:hover
			// color morado
			background-color: rgba(0, 0, 0, 0.09);
	.morado
		color morado
		height 80px
		font-size 40px !important
.flex-center
	display flex
	align-items center
	justify-content center
	height 80px !important
.subrayado
	background morado
	padding 5px
	color #fff
	
// Informaci√≥n del medico
.person-general
	
.person-container
	display flex
	justify-content center
	align-items center
	flex-wrap wrap
	margin 0.5em 0 
	position relative
	transition all 5s ease
	.photo
		max-width 200px
		border-radius 50%
		padding 1px
	p
		
		text-align center
		font-weight bold
	.description
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		height 100%
		display none
		justify-content center
		align-items center
		p.information
			text-align center
			color #fff
			text-shadow 2px 2px 2px black
.person-container:hover
	.description
		width 100%
		display flex
	.photo
		filter blur(5px)
// Estilos calculadora
.calculadora
	p.subrayado
		margin-bottom 1.5em
	input[type='submit']
		background verde
		margin 0 auto
		display block

// Estilos cita
.cita
	width 100%
	background-image url('../img/cita.jpg')
	background-position center
	background-repeat no-repeat
	background-size center
	height 350px
	.texto-cita
		position relative
		width 100%
		height 350px
		background rgba(238, 235, 233, 0.51);
		a
			color #fff
			position absolute
			top 50%
			left 50%
			transform translate(-50%,-50%)
			font-size 20px
			// border solid 2px verde
			padding 10px
			background morado
			box-shadow 4px 3px #6e4f6f
	
.bg-morado
	background rgba(171, 142, 172, 0.80);
.bg-verde
	background rgba(172, 190, 84, 0.80)
.side-nav
	ul
		li,a
			height 48px !important
	
